    <script>
        // Enregistrement du service worker pour rendre l'application installable
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                navigator.serviceWorker.register('service-worker.js')
                    .then(registration => {
                        console.log('Service Worker enregistré avec succès:', registration);
                    })
                    .catch(error => {
                        console.log('Échec de l\'enregistrement du Service Worker:', error);
                    });
            });
        }

        // Gestion du formulaire d'enregistrement
        document.getElementById('company-form').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Récupération des valeurs du formulaire
            const company = {
                email: document.getElementById('email').value,
                name: document.getElementById('company-name').value,
                contact: document.getElementById('contact-person').value,
                resources: document.getElementById('resources').value,
                waste: document.getElementById('waste').value,
                skills: document.getElementById('skills').value,
                services: document.getElementById('services').value,
                needs: document.getElementById('needs').value
            };
            
            // Enregistrement dans le stockage local
            let companies = JSON.parse(localStorage.getItem('companies')) || [];
            companies.push(company);
            localStorage.setItem('companies', JSON.stringify(companies));
            
            // Ajout de l'entreprise au tableau de bord
            addCompanyToList(company);
            
            // Réinitialisation du formulaire
            this.reset();
            
            alert('Entreprise enregistrée avec succès!');
        });

        // Fonction pour ajouter une entreprise à la liste
        function addCompanyToList(company) {
            const companyCard = document.createElement('div');
            companyCard.className = 'company-card';
            
            companyCard.innerHTML = `
                <div class="company-name">${company.name}</div>
                <div class="company-details"><span>Email:</span> ${company.email}</div>
                <div class="company-details"><span>Contact:</span> ${company.contact}</div>
                <div class="company-details"><span>Ressources:</span> ${company.resources || 'Non spécifié'}</div>
                <div class="company-details"><span>Déchets:</span> ${company.waste || 'Non spécifié'}</div>
                <div class="company-details"><span>Compétences:</span> ${company.skills || 'Non spécifié'}</div>
                <div class="company-details"><span>Services:</span> ${company.services || 'Non spécifié'}</div>
                <div class="company-details"><span>Besoins:</span> ${company.needs || 'Non spécifié'}</div>
            `;
            
            document.getElementById('companies-list').appendChild(companyCard);
            
            // Ajout de l'entreprise au sélecteur
            const option = document.createElement('option');
            option.value = company.name.toLowerCase().replace(/\s/g, '-');
            option.textContent = company.name;
            document.getElementById('company-select').appendChild(option);
        }

        // Chargement des entreprises depuis le stockage local
        window.addEventListener('load', function() {
            const companies = JSON.parse(localStorage.getItem('companies')) || [];
            companies.forEach(company => addCompanyToList(company));
        });

        // Gestion du sélecteur d'entreprises
        document.getElementById('company-select').addEventListener('change', function() {
            const selectedValue = this.value;
            const matchesContainer = document.getElementById('matches-container');
            
            if (selectedValue) {
                matchesContainer.classList.remove('hidden');
                // Ici, vous pourriez implémenter la logique pour trouver des correspondances
                // entre l'entreprise sélectionnée et les autres entreprises
            } else {
                matchesContainer.classList.add('hidden');
            }
        });
    </script>
